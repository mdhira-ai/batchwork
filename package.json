{
  "name": "batchwork",
  "version": "2.0.11",
  "private": true,
  "main": "main/main.js",
  "author": "habib",
  "description": "habib-software-industry",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev2": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev\" \"electron .\"",
    "build2": "next build && electron-builder"
  },
  "build": {
    "nsis": {
      "oneClick": false,
      "perMachine": true
    },
    "appId": "com.habib.batchwork",
    "productName": "Batchwork",
    "win": {
      "icon": "/resources/icon.png",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "/resources/icon.png",
      "publish": [
        "github"
      ]
    }
  },
  "repository": "https://github.com/mdhira-ai/batchwork",
  "license": "MIT",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-switch": "^1.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "electron-serve": "^1.2.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^4.12.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8",
    "tailwindcss": "^3.3.0"
  }
}
